<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <link rel="icon" href="favicon.png">
        <title>Singbox UI</title>
        <style>
            body, html {
                margin: 0;
                padding: 0;
                width: 100%;
                height: 100%;
            }

            body {
                font-size: 5rem;
                /* background-color: ; */
            }

            button {
                font-size: 0.5em;
            }

            h2 {
                margin: 0;
                padding: 0;
                font-size: 1em;
            }

            .wrapper {
                width: 100%;
                height: 100%;
                display: flex;
                align-items: center;
                justify-content: flex-start;
                flex-direction: column;
                gap: 30px;
            }

            @media (min-aspect-ratio: 5/9) {
                button {
                    width: 30vh;
                    height: 30vh;
                }
            }

            @media (max-aspect-ratio: 5/9) {
                button {
                    width: 30vw;
                    height: 30vw;
                }
            }

            .error {
                font-weight: bold;
                font-size: 0.4em;
                background-color: #cb1a57;
                padding: 5px;
                border-radius: 5px;
                max-width: 80%;
                text-align: center;
            }

            .error p {
                margin: 0;
                padding: 0;
                /*max-width: 50%;*/
                word-break: break-word;
            }

            .running {
                color: #00ff00;
            }

            .stopped {
                color: red;
            }

            input[name="action"] {
                display: none;
            }
        </style>
    </head>
    <body>
        <div class="wrapper">
            <div class="placeholder"></div>

            {{ if .running }}
                <h2 class="running">Running!</h2>
            {{ else}}
                <h2 class="stopped">Stopped.</h2>
            {{ end }}

            <form action="/" method="POST">
                {{ if .running }}
                    <button type="submit">
                        Stop
                    </button>
                    <input name="action" value="stop">
                {{ else }}
                    <button type="submit">
                        Run
                    </button>
                    <input name="action" value="start">
                {{ end }}
            </form>

            {{ if .error_message }}
                <div class="error">
                    <p>{{ .error_message }}</p>
                </div>
            {{ end }}
        </div>
    </body>
</html>